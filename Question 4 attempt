#   This is a underdeveloped code for question 4 on projecteuler.net

#   find product of palindrome


#   set the two product's range to 3 digit
product_range = []
a_list = []
b_list = []
c_list = []


def product():
    a = 800
    b = 1000
    c = 0
    while a < 999:
        a += 1
        a_list.append(a)
    while c <= 500:
        b -= 1
        c += 1
        b_list.append(b)
        if c == 500:
            b += 2
            b_list.append(b)
    return


product()
print(a_list)
print(b_list)

#   times the product in list
multiplied_ab = []
for i in range(len(a_list)):
    multiplied_ab.append(a_list[i] * b_list[i])
print(multiplied_ab)

#   detect if it is a palindrome


def is_palindrome():
    palindrome_list = []
    value = [multiplied_ab]
    reverse = value[:: -1]
    if value == reverse:
        print(palindrome_list)
        palindrome_list.append(value)


is_palindrome()

